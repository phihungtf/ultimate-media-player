<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" MinWidth="700">
    <DockPanel x:Name="Main">
        <Menu DockPanel.Dock="top">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open" Click="Show"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_Playlist">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_Audio">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_Video">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom" HorizontalAlignment="Center" MaxWidth="1000" Margin="0,5,0,5" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5" >
                <TextBlock Text="31" Width="50" TextAlignment="Center"/>
                <Slider MinWidth="600" MaxWidth="1000"/>
                <TextBlock Text="123" Width="50" TextAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE102;"  />
                    <Button Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE103;" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="180, 0 , 180 ,0">
                    <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE100;" VerticalAlignment="Center" />
                    <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE71A;" VerticalAlignment="Center" />
                    <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE101;" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Click="FullScreen" FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE740;"  VerticalAlignment="Center"/>
                    <Button x:Name="ShowVideo" FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE8FD;"  VerticalAlignment="Center" Click="ShowVideo_Click"/>
                    <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE8EE;"  VerticalAlignment="Center" />
                    <Button Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE8ED;" VerticalAlignment="Center" />
                    <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE14B;"  VerticalAlignment="Center" />
                    <Button Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE13C;" VerticalAlignment="Center" />
                    <Slider Width="100"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <ListView Padding="0 5" x:Name="lvPlayList" Visibility="Visible" MinWidth="800"  >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title"/>
                    <GridViewColumn Header="Duration" />
                </GridView>
            </ListView.View>
        </ListView>
        <MediaElement Name="media" Width="Auto" LoadedBehavior="Manual" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </DockPanel>

</Window>
